@page
@model Blossom_RazorWeb.Pages.Admin.CategoryManagement.DeleteModel
@{
    Layout = "_LayoutAdmin";
}

<h2>Delete Category</h2>

@if (Model.FlowerCategory != null)
{
    <div>
        <h3>Are you sure you want to delete this category?</h3>
        <p><strong>Category Name:</strong> @Model.FlowerCategory.Name</p>
        <p><strong>Image:</strong> <img src="@Model.FlowerCategory.ImageUrl" alt="Category Image" width="100" /></p>
    </div>

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/Admin/CategoryManagement/Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <p>Category not found.</p>
}
