@page
@model Blossom_RazorWeb.Pages.OrderHistory.OrderHistoryModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Fruitables - Vegetable Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    <link href="~/css/OrderHistory.css" rel="stylesheet" />
</head>
<body>
    <section class="container section-order-history">
        <div class="order-history">
            <!-- Tab -->
            <div class="tabs">
                <div class="tab">Đơn hàng (1)</div>
                <div class="tab">Đơn hàng khác (0)</div>
            </div>

            <!-- Order Card -->
            <article class="card mt-5">
                <div class="card-body">
                    <h6 class="mb-4">
                        <span class="fw-bold text-black">Mã đơn hàng:</span>
                        <span class="primary-color"> #123456</span>
                    </h6>

                    <div class="card product-info">
                        <div class="card-body row">
                            <div class="col">
                                <span class="fw-bold text-black">Thông tin sản phẩm</span>
                                <figure class="itemside mb-3">
                                    <div class="aside">
                                        <img src="product_image_url.jpg" class="img-sm border" />
                                    </div>
                                    <figcaption class="info align-self-center">
                                        <p class="title">Tên Sản Phẩm <br />x 2</p>
                                        <span class="text-black">300,000₫</span>
                                    </figcaption>
                                </figure>
                            </div>
                            <div class="col">
                                <strong class="fw-bold text-black">Địa chỉ giao hàng</strong> <br />
                                <span class="text-black">123 Đường ABC, Quận XYZ</span>
                            </div>
                            <div class="col">
                                <strong class="fw-bold text-black">SĐT người nhận</strong> <br />
                                <span class="text-black">0123456789</span>
                            </div>
                            <div class="col">
                                <strong class="fw-bold text-black">Tên người nhận</strong> <br />
                                <span class="text-black">Nguyễn Văn A</span>
                            </div>
                            <div class="col">
                                <strong class="fw-bold text-black">Thanh toán</strong> <br />
                                <span class="text-black">COD</span>
                            </div>
                            <div class="col">
                                <strong class="fw-bold text-black">Ngày đặt hàng</strong> <br />
                                <span class="text-black">12-11-2024 14:30</span>
                            </div>
                        </div>
                    </div>

                    <!-- Tracking Steps -->
                    <div class="track text-black">
                        <div class="step active">
                            <span class="icon"> <i class="fa fa-check"></i> </span>
                            <span class="text">Đã giao</span>
                        </div>
                        <div class="step">
                            <span class="icon"> <i class="fa fa-clock"></i> </span>
                            <span class="text">Đang giao</span>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-center align-items-center">
                        <button class="btn btn-danger mt-4">Huỷ đơn hàng</button>
                        <button class="btn btn-success mt-4">Xác nhận đã nhận hàng</button>
                    </div>
                </div>
            </article>
        </div>
    </section>

</body>
