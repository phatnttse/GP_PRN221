@page
@using Blossom_BusinessObjects.Entities.Enums
@model Blossom_RazorWeb.Pages.OrderHistory.OrderHistoryModel
@{
}

    <section class="container section-order-history">
        <div class="order-history">
            <!-- Tab -->
            <div class="tabs">
                <div class="tab">Đơn hàng (1)</div>
                <div class="tab">Đơn hàng khác (0)</div>
            </div>

            <!-- Order Card -->
            <article class="card mt-5">
                @foreach(var item in Model.OrderDetails)
                {
                    <div class="card-body">
                        <h6 class="mb-4">
                            <span class="fw-bold text-black">Mã đơn hàng:</span>
                            <span class="primary-color"> #@item.Order.Id</span>
                        </h6>

                        <div class="card product-info">
                            <div class="card-body row">
                                <div class="col">
                                    <span class="fw-bold text-black">Thông tin sản phẩm</span>
                                    <figure class="itemside mb-3">
                                        <div class="aside">
                                            <img src="@item.Flower.ImageUrl" class="img-sm border" />
                                        </div>
                                        <figcaption class="info align-self-center">
                                            <p class="title">@item.Flower.Name <br />x @item.Quantity</p>
                                            <span class="text-black">@item.Price</span>
                                        </figcaption>
                                    </figure>
                                </div>
                                <div class="col">
                                    <strong class="fw-bold text-black">Địa chỉ giao hàng</strong> <br />
                                    <span class="text-black">@item.Order.BuyerAddress</span>
                                </div>
                                <div class="col">
                                    <strong class="fw-bold text-black">SĐT người nhận</strong> <br />
                                    <span class="text-black">@item.Order.BuyerPhone</span>
                                </div>
                                <div class="col">
                                    <strong class="fw-bold text-black">Tên người nhận</strong> <br />
                                    <span class="text-black">@item.Order.BuyerName</span>
                                </div>
                                <div class="col">
                                    <strong class="fw-bold text-black">Thanh toán</strong> <br />
                                    <span class="text-black">@item.PaymentMethod</span>
                                </div>
                                <div class="col">
                                    <strong class="fw-bold text-black">Ngày đặt hàng</strong> <br />
                                    <span class="text-black">@item.Order.CreatedAt</span>
                                </div>
                            </div>
                        </div>

                       <!-- Tracking Steps -->
<div class="track text-black">
    <!-- Chờ xử lý -->
    <div class="step @((int)item.Status >= 0 ? "active green" : "")">
        <span class="icon"> <i class="fa fa-hourglass-start"></i> </span>
        <span class="text">Chờ xử lý</span>
    </div>
                            <div class="connector @((int)item.Status >= 0 ? "active" : "")"></div>

    @if ((int)item.Status == 1 || (int)item.Status == 2) 
    {
        <!-- Đang chuẩn bị -->
        <div class="step @((int)item.Status >= 1 ? "active green" : "")">
            <span class="icon"> <i class="fa fa-cogs"></i> </span>
            <span class="text">Đang chuẩn bị</span>
        </div>

        <!-- Đang giao -->
        <div class="step @((int)item.Status >= 2 ? "active green" : "")">
            <span class="icon"> <i class="fa fa-truck"></i> </span>
            <span class="text">Đang giao</span>
        </div>

    }
    else
    {
        <!-- Đã nhận hàng -->
        <div class="step @((int)item.Status >= 3 ? "active green" : "")">
            <span class="icon"> <i class="fa fa-check"></i> </span>
            <span class="text">Đã nhận hàng</span>
        </div>
    }

    <!-- Đã hủy -->
    <div class="step @((int)item.Status == 4 ? "active red" : "")">
        <span class="icon"> <i class="fa fa-times-circle"></i> </span>
        <span class="text">Đã hủy</span>
    </div>

    <!-- Hoàn tiền -->
    <div class="step @((int)item.Status == 6 ? "active blue" : "")">
        <span class="icon"> <i class="fa fa-sync-alt"></i> </span>
        <span class="text">Hoàn tiền</span>
    </div>
</div>




                        <!-- Buttons -->
                        <div class="d-flex justify-content-center align-items-center">
                            @if((int)item.Status == 0)
                            {
                                <form method="post" asp-page-handler="CancelStatus">
                                    <!-- Conditional Button for Canceling Order -->
                                    <input type="hidden" name="orderDetailId" value="@item.Id" />
                                    <button class="btn btn-danger mt-4">Huỷ đơn hàng</button>
                                </form>
                                
                            }
                            @if((int)item.Status == 3)
                            {
                                <form method="post" asp-page-handler="ConfirmedReceipt" asp-route-Id="@item.Id">
                                    <input type="hidden" name="orderDetailId" value="@item.Id" />
                                    <button class="btn btn-success mt-4">Xác nhận đã nhận hàng</button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </article>
            
        </div>
        <div style="margin-top: 10px">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                        <a class="page-link" href="?PageIndex=@(Model.PageIndex - 1)">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                            <a class="page-link" href="?PageIndex=@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="?PageIndex=@(Model.PageIndex + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </section>

