@page
@model Blossom_RazorWeb.Pages.SellerChannel.FlowerManagement.CreateModel
@{
    Layout = "_LayoutSellerChannel";
}

<form>
    <div class="form-group">
        <label for="uploadImage">Tải ảnh sản phẩm</label>
        <input type="file" class="form-control-file" id="uploadImage" accept="image/*">
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputProductName">Tên sản phẩm</label>
            <input type="text" class="form-control" id="inputProductName" placeholder="Tên sản phẩm">
        </div>
        <div class="form-group col-md-6">
            <label for="inputCategory">Danh mục</label>
            <select id="inputCategory" class="form-control">
                <option selected>Chọn danh mục...</option>
                <option>...</option>
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputPrice">Giá sản phẩm (VNĐ)</label>
            <input type="text" class="form-control" id="inputPrice">
        </div>
        <div class="form-group col-md-6">
            <label for="inputQuantity">Số lượng</label>
            <input type="text" class="form-control" id="inputQuantity">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="expirationDate">Ngày hết hạn</label>
            <input type="datetime-local" class="form-control" id="expirationDate">
        </div>
        <div class="form-group col-md-6">
            <label for="stopSaleDate">Ngày ngưng bán</label>
            <input type="datetime-local" class="form-control" id="stopSaleDate">
        </div>
    </div>

    <div class="form-group">
        <label for="inputDescription">Mô tả</label>
        <textarea rows="5" class="form-control" id="inputDescription" placeholder="Nhập mô tả chi tiết..."></textarea>
    </div>

    

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
